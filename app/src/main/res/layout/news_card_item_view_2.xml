<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/news_card_item_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pure_white">

            <TextView
                android:id="@+id/news_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/apercu_regular"
                android:text="-"
                android:textColor="@color/dark_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/news_url2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_title2"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="-"
                android:textColor="@color/dark_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/news_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_url2"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/apercu_regular"
                android:text="-"
                android:textColor="@color/light_black" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/news_card_item_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pure_white">

            <ImageView
                android:id="@+id/news_image_url1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@android:drawable/screen_background_light" />

            <TextView
                android:id="@+id/news_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/news_image_url1"
                android:fontFamily="sans-serif-condensed"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="-"
                android:textColor="@color/dark_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/news_url1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_title1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/news_image_url1"
                android:text="-"
                android:textColor="@color/dark_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/news_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_url1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/news_image_url1"
                android:fontFamily="sans-serif-condensed"
                android:text="-"
                android:textColor="@color/light_black" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

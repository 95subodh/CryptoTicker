<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0sp"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.sky.cryptoticker.StockPage.StockPageActivity">

    <TextView
        android:id="@+id/coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/large_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coin_name"
        android:layout_toLeftOf="@+id/coin_name"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8sp"
        android:layout_marginLeft="16sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/large_text"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/coin_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coin_name"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="@dimen/list_item_padding"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin_rank_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coin_rank"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8sp"
        android:fontFamily="sans-serif-condensed"
        android:text="Rank"
        android:textSize="@dimen/small_text"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="@dimen/list_item_padding"
        android:layout_below="@+id/coin_rank_dummy"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin_cap_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coin_cap"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8sp"
        android:fontFamily="sans-serif-condensed"
        android:text="Market Capture"
        android:textSize="@dimen/small_text"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin_avail_supply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/coin_cap_dummy"
        android:layout_marginTop="@dimen/list_item_padding"
        android:layout_marginLeft="8sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin_avail_supply_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-condensed"
        android:text="Available Supply"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textSize="@dimen/small_text"
        android:layout_below="@+id/coin_avail_supply" />

    <TextView
        android:id="@+id/coin_tot_supply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/coin_avail_supply_dummy"
        android:layout_marginTop="@dimen/list_item_padding"
        android:layout_marginLeft="8sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin_tot_supply_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/coin_tot_supply"
        android:layout_marginLeft="8sp"
        android:fontFamily="sans-serif-condensed"
        android:text="Total Supply"
        android:textSize="@dimen/small_text"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin_lst_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/coin_tot_supply_dummy"
        android:layout_marginTop="@dimen/list_item_padding"
        android:layout_marginLeft="8sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin_lst_update_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/coin_lst_update"
        android:layout_marginLeft="8sp"
        android:fontFamily="sans-serif-condensed"
        android:text="Last Updated on"
        android:textSize="@dimen/small_text"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coin_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/coin_price"
        android:layout_below="@+id/coin_price"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold" />

</RelativeLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.HomePageTabs.MyPortfolioTab.MyPortfolioTab">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/my_current_portfolio_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/portfolio_heading_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/portfolio_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Portfolio"
                    android:textColor="@android:color/background_dark"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_current_portfolio_card_view_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/portfolio_heading_view">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/my_current_portfolio_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    card_view:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/background_dark">

                        <RelativeLayout
                            android:id="@+id/current_portfolio_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_centerHorizontal="true" >

                            <TextView
                                android:id="@+id/current_portfolio_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-condensed"
                                android:text="$3,265,856"
                                android:textColor="@android:color/background_light"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/current_portfolio_value_dummy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/current_portfolio_value"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-condensed"
                                android:text="CURRENT PORTFOLIO VALUE"
                                android:textColor="@android:color/background_light"
                                android:textSize="16sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/total_cost_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_below="@+id/current_portfolio_view">

                            <TextView
                                android:id="@+id/total_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-condensed"
                                android:text="$1,985,084"
                                android:textColor="@android:color/background_light"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_cost_dummy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/total_cost"
                                android:fontFamily="sans-serif-condensed"
                                android:text="TOTAL COST"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/total_profit_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="16dp"
                            android:layout_below="@+id/current_portfolio_view"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:id="@+id/total_profit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-condensed"
                                android:text="$1,280,117"
                                android:textColor="@android:color/background_light"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_profit_dummy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/total_profit"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-condensed"
                                android:text="TOTAL PROFIT"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/total_profit_percentage_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="24dp"
                            android:layout_below="@+id/current_portfolio_view">

                            <TextView
                                android:id="@+id/total_profit_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-condensed"
                                android:text="65%"
                                android:textColor="@android:color/background_light"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_profit_percentage_dummy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/total_profit_percentage"
                                android:fontFamily="sans-serif-condensed"
                                android:text="TOTAL PROFIT"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_portfolio_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_current_portfolio_view">

            <RelativeLayout
                android:id="@+id/my_portfolio_heading_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/my_portfolio_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="My Portfolio"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_portfolio_card_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/my_portfolio_heading_view"
                android:background="@android:color/background_dark">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/my_portfolio_card_heading_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/background_dark">

                        <RelativeLayout
                            android:id="@+id/my_portfolio_details_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/my_portfolio_coin_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Coin Name"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/my_portfolio_current_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Current Price"
                                android:layout_marginRight="24dp"
                                android:layout_toLeftOf="@+id/my_portfolio_my_profit"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/my_portfolio_my_profit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="My Profit"
                                android:layout_alignParentEnd="true"
                                android:textColor="@android:color/background_light"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_portfolio_card_view_layout">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
